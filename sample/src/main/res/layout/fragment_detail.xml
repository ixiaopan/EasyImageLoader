<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_linear_gradient_transparent_to_black"
        android:gravity="center">

        <TextView
            android:id="@+id/button_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:contentDescription="@string/app_name"
            android:drawableTop="@drawable/ic_action_share"
            android:padding="12dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="    分享    " />

        <TextView
            android:id="@+id/button_detail_applyWallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:contentDescription="@string/app_name"
            android:drawableTop="@drawable/ic_action_picture"
            android:padding="12dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="设为壁纸" />

        <TextView
            android:id="@+id/button_detail_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:contentDescription="@string/app_name"
            android:drawableTop="@drawable/ic_action_play"
            android:padding="12dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="自动播放" />

        <TextView
            android:id="@+id/button_detail_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:contentDescription="@string/app_name"
            android:drawableTop="@drawable/ic_action_save"
            android:padding="12dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="    保存    " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_detail_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:layout_gravity="right"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_round_corners_black_translucent">

        <TextView
            android:id="@+id/text_detail_currentItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="/" />

        <TextView
            android:id="@+id/text_detail_countItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="" />
    </LinearLayout>
</FrameLayout>